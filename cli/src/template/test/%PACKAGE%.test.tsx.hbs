import { matchers } from '@emotion/jest'
import { render, screen } from '@testing-library/react'
import { axe } from 'jest-axe'
import React from 'react'
expect.extend(matchers)

const %COMPONENT%Render = (
  <%COMPONENT% data-testid='%PACKAGE%-test'>%COMPONENT%</%COMPONENT%>
)

describe('%COMPONENT%', () => {
  it('should render the theme-system', () => {
    render(%COMPONENT%Render)
    expect(screen.getByTestId('%PACKAGE%-test')).toBeTruthy()
  })
  it('should validate accessibility', async () => {
    const { container } = render(%COMPONENT%Render)
    const result = await axe(container)
    expect(result).toHaveNoViolations()
  })
})
